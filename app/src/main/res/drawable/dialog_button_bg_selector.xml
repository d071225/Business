<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 点击状态下的效果 -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/button_selected"/>
            <stroke android:width="1dp" android:color="@color/button_selected"/>
            <corners android:radius="4dp" />
            <padding android:bottom="10dp" android:top="10dp" />
        </shape>
    </item>
    <!-- 正常状态下(非点击)的效果 -->
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/home_ll_bg_color"/>
            <stroke android:width="1dp"  android:color="@color/home_ll_bg_color"/>
            <corners android:radius="4dp" />
            <padding android:bottom="10dp" android:top="10dp" />
        </shape>
    </item>

</selector>